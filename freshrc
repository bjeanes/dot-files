fresh junegunn/fzf bin/fzf-tmux --bin

fresh_after_build() {
  # Fix executable bit
  # https://github.com/freshshell/fresh/issues/159
  chmod +x ~/.git_template/hooks/*

  # Install Vim plugins
  if [ -z "$SKIP_VIM_PLUGINS" ]; then
    vim='vim'
    command -v nvim &>/dev/null && vim='nvim'
    $vim +PlugUpdate +PlugClean +qall
  fi
}
